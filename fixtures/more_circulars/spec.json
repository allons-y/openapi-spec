{
  "openapi": "3.0.0",
  "info": {
    "title": "Item API",
    "description": "Item API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://item.api.local/v1"
    }
  ],
  "paths": {
    "/item": {
      "get": {
        "operationId": "GetItem",
        "responses": {
          "200": {
            "description": "item detail response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "item.json#/item"
                }
              }
            }
          },
          "default": {
            "$ref": "#/components/responses/itemResponse"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "itemResponse": {
        "description": "Item",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "item.json#/item"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "key": {
        "type": "apiKey",
        "name": "x-item-token",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "key": []
    }
  ]
}
